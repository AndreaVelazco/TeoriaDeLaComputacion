digraph automata {
    rankdir=LR;  // Orientación de izquierda a derecha

    // Definición de los estados y su forma
    node [shape=circle];
    q0 [shape=doublecircle];  // Estado final

    // Definición de las transiciones
    q0 -> q0 [label="0"];
    q0 -> q1 [label="1"];
    q0 -> q0 [label="2"];
    q1 -> q0 [label="0"];
    q1 -> q1 [label="1"];
    q1 -> q2 [label="2"];
    q2 -> q0 [label="0"];
    q2 -> q1 [label="1"];
    q2 -> q2 [label="2"];
}